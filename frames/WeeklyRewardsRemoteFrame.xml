    <Frame name="WeeklyRewardsRemoteFrameTemplate" mixin="GreatVaultListWeeklyRewardsRemoteMixin" parent="UIParent" hidden="true" enableMouse="true" toplevel="true" frameLevel="100" virtual="true">
